<h1>Listing user_settings</h1>

<table>
  <thead>
    <tr>
      <th>Followed flag</th>
      <th>Aggred flag</th>
      <th>Commented flag</th>
      <th>Answered flag</th>
      <th>Invited flag</th>
      <th>Edited flag</th>
      <th>Pm flag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_settings.each do |user_setting| %>
      <tr>
        <td><%= user_setting.followed_flag %></td>
        <td><%= user_setting.aggred_flag %></td>
        <td><%= user_setting.commented_flag %></td>
        <td><%= user_setting.answered_flag %></td>
        <td><%= user_setting.invited_flag %></td>
        <td><%= user_setting.edited_flag %></td>
        <td><%= user_setting.pm_flag %></td>
        <td><%= link_to 'Show', user_setting %></td>
        <td><%= link_to 'Edit', edit_user_setting_path(user_setting) %></td>
        <td><%= link_to 'Destroy', user_setting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

