<p>
  <strong>User:</strong>
  <%= answer.user.email %>
</p>
 
<p>
  <strong>Answer:</strong>
  <%= answer.content %>
</p>

<h2>Comments</h2>
<%= render answer.comments.order("id") %>

<h2>Add an comment for this answer:</h2>
<%= form_for([answer, answer.comments.build]) do |f| %>
  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>


