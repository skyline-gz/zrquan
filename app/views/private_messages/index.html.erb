<% @private_messages.order("id").each do |pm| %>
	<% if pm.send_class == 1 %>
		<b><%= pm.user1.last_name %>&nbsp;<%= pm.user1.first_name %>:</b>
	<% else %>
		<b><%= pm.user2.last_name %>&nbsp;<%= pm.user2.first_name %>:</b>
	<% end %>
	<br>
	<%= pm.content %>
	<br>
<% end %>
<br><br>
<b>New Private Message</b>
<%= form_tag({controller: "private_messages", action: "create"}, method: "post") do %>
	<div class="field">
		<%= label_tag(:target_user, "To:") %>&nbsp;
		<%= label_tag(:last_name, @target_user.last_name) %>&nbsp;<%= label_tag(:first_name, @target_user.first_name) %>
	  <%= hidden_field_tag(:target_user_id, @target_user.id) %>
	</div>
	<div class="field">
		<%= label_tag(:content, "Content:") %>
		<%= text_area_tag(:content) %>
	</div>
	<div class="actions">
		<%= submit_tag("Send") %>
	</div>
<% end %>
