<script type="text/javascript">
    Zrquan.module('User', function(Module, App, Backbone, Marionette, $, _) {
    <% if current_user == nil %>
        Module.isLogin = false;
    <% else %>
        Module.isLogin = true;
        Module.isComfirmed = <%= current_user.confirmed? %>;
        Module.name = '<%= generate_name(current_user.first_name, current_user.last_name) %>';
        Module.email = '<%= current_user.email %>';
        Module.avatar = '<%= current_user.avatar == nil ? '': Settings.upload_url + current_user.avatar %>';
        Module.userId = <%= current_user.id %>;
    <% end %>
    });
</script>