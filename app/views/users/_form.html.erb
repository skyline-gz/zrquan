<%-
  province = '440000'
  city = '440300'
  provinces  = ChinaCity.list
  cities     = ChinaCity.list(province)
%>
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div>
	<div class='html-tag city-group'>
		<select class='city-select city-province'>
		  <option>--省份--</option>
		  <%= options_for_select(provinces) %>
		</select>
		<select class='city-select city-city'>
		  <option>--城市--</option>
		  <%= options_for_select(cities) %>
		</select>
	</div>
  <div class="field">
    <%= f.label :signature %><br>
    <%= f.text_area :signature %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
