<h1>Listing questions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
<!-- theme -->
      <th>Industry</th>
      <th>Category</th>
      <th>Answer num</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.title %></td>
        <td><%= question.content %></td>

        <td><%= question.industry %></td>
        <td><%= question.category %></td>
        <td><%= question.answer_num %></td>
        <td><%= question.user.last_name %>&nbsp;<%= question.user.first_name %></td>
        <td><%= link_to 'Show', question %></td>
				<% if can? :bookmark, question %>
					<td><%= link_to 'Bookmark', bookmarks_path(:type=>"Question", :id=>question.id), method: :post %></td>
				<% elsif can? :unbookmark, question %>
					<td><%= link_to 'Unbookmark', bookmark_path(:type=>"Question", :id=>question.id), :id=>question.id, method: :delete %></td>
				<% end %>
				<!--<% if can? :edit, question %>
	        <td><%= link_to 'Edit', edit_question_path(question), 'data-no-turbolink' => true %></td>
				<% end %>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, Question %>
	<%= link_to 'New Question', new_question_path, 'data-no-turbolink' => true %>
<% end %>
