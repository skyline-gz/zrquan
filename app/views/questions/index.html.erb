<h1>Listing questions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Theme</th>
      <th>Industry</th>
      <th>Category</th>
      <th>Answer num</th>
      <th>Mark flag</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.title %></td>
        <td><%= question.content %></td>
        <td><%= question.theme %></td>
        <td><%= question.industry %></td>
        <td><%= question.category %></td>
        <td><%= question.answers_num %></td>
        <td><%= question.mark_flag %></td>
        <td><%= question.user.id %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_question_path(question), 'data-no-turbolink' => true %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.mentor_flag != true %>
	<%= link_to 'New Question', new_question_path, 'data-no-turbolink' => true %>
<% end %>
