<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @article.content %>
</p>

<p>
  <strong>Agree score:</strong>
  <%= @article.agree_score %>
</p>

<p>
  <strong>Industry:</strong>
  <%= @article.industry %>
</p>

<p>
  <strong>Category:</strong>
  <%= @article.category %>
</p>

<p>
  <strong>User:</strong>
  <%= @article.user.last_name %>&nbsp;<%= @article.user.first_name %>
</p>

<% if can? :edit, @article %>
	<%= link_to 'Edit', edit_article_path(@article) %> |
<% end %>
<% if can? :destroy, @article %>
	<%= link_to 'Delete', article_path(@article), method: :delete %> |
<% end %>
<% if can? :agree, @article %>
	<%= link_to 'Agree', agree_article_path(@article), method: :post %> |
<% end %>
<% if can? :bookmark, @article %>
	<%= link_to 'Bookmark', bookmarks_path(:type=>"Article", :id=>@article.id), method: :post %> | 
<% elsif can? :unbookmark, @article %>
	<%= link_to 'Unbookmark', bookmark_path(:type=>"Article", :id=>@article.id), method: :delete %> | 
<% end %>
<%= link_to 'Back', articles_path %>

<h2>Comments</h2>
<%= render @article.comments %>

<% if can? :comment, @article %>
	<h2>Add a comment:</h2>
	<%= form_for([@article, @article.comments.build]) do |f| %>  
		<p>
		  <%= f.label :content %><br>
		  <%= f.text_area :content %>
		</p>
		<p>
		  <%= f.submit %>
		</p>
	<% end %>
<% end %>
