<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @article.content %>
</p>

<p>
  <strong>Agree score:</strong>
  <%= @article.agree_score %>
</p>

<p>
  <strong>Theme:</strong>
  <%= @article.theme %>
</p>

<p>
  <strong>Industry:</strong>
  <%= @article.industry %>
</p>

<p>
  <strong>Category:</strong>
  <%= @article.category %>
</p>

<p>
  <strong>Mark flag:</strong>
  <%= @article.mark_flag %>
</p>

<p>
  <strong>User:</strong>
  <%= @article.user.id %>
</p>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= form_for([@article, @article.comments.build]) do |f| %>  
  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
