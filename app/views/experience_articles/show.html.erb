<p>
  <strong>Title:</strong>
  <%= @experience_article.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @experience_article.content %>
</p>

<p>
  <strong>Agree score:</strong>
  <%= @experience_article.agree_score %>
</p>

<p>
  <strong>Theme:</strong>
  <%= @experience_article.theme %>
</p>

<p>
  <strong>Industry:</strong>
  <%= @experience_article.industry %>
</p>

<p>
  <strong>Category:</strong>
  <%= @experience_article.category %>
</p>

<p>
  <strong>Mark flag:</strong>
  <%= @experience_article.mark_flag %>
</p>

<p>
  <strong>User:</strong>
  <%= @experience_article.user.id %>
