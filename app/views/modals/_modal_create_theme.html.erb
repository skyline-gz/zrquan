<!--创建主题模态框-->
<div class="modal" id="createThemeModal" xmlns="http://www.w3.org/1999/html">
  <div class="modal-dialog">
    <div class="modal-content">
      <form action="/themes" method="POST" id="theme-create-form"
            autocomplete="off" novalidate="novalidate" data-remote="true" data-type="json">
          <div class="modal-header">
            <div class="modal-title">创建主题</div>
            <a class="close" data-dismiss="modal">
              <i class="icons-no"></i>
            </a>
          </div>
          <div class="modal-body">
            <div class="section-item">
              <h4>主题名：</h4>
              <input name="name" class="component-input" type="text" />
            </div>
            <div class="section-item">
              <h4>主题描述（可选）：</h4>
              <textarea name="description" class="component-textarea"
               placeholder="请对此主题补充一些描述资料, 以供他人参考"></textarea>
            </div>
            <div class="section-item">
              <h4 class="pull-left" style="line-height: 32px;margin-right: 5px">主题类型：</h4>
              <select name="theme_type" data-width="120px">
                <option value="Company">公司</option>
                <option value="School">学校</option>
                <option value="Skill">技能技术</option>
                <option value="Certification">认证资格</option>
                <option value="OtherWiki">其他</option>
              </select>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
            <button type="submit" class="btn btn-primary">保存</button>
          </div>
      </form>
    </div>
  </div>
</div>