<!--（问答）提问模态框-->
<div class="modal" id="askQuestionModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <form action="/questions" method="POST" id="password-setting-form" autocomplete="off" novalidate="novalidate">
          <div class="modal-header">
            <div class="modal-title">提问</div>
            <a class="close" data-dismiss="modal">
              <i class="icons-no"></i>
            </a>
          </div>
          <div class="modal-body">
            <div class="section-item">
              <h4>问题标题：</h4>
              <input name="question[title]" class="component-input" type="text"/>
            </div>
            <div class="section-item">
              <h4>问题说明（可选）：</h4>
              <textarea name="question[content]"></textarea>
            </div>
            <div class="section-item">
              <h4>选择或搜索主题：</h4>
              <input name="question[themes]" class="" type="text" />
              <div class="hot-themes-wrapper">
                    <span class="hot-themes-title">热门主题：</span>
                  <%Settings['hot_themes'].each do |key, value| %>
                      <div class="component-subject" data-id="<%= key %>"><%= value %></div>
                  <%end%>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
            <button type="submit" class="btn btn-primary">提问</button>
          </div>
      </form>
    </div>
  </div>
</div>